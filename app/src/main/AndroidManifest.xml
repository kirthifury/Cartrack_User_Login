<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cartrack.mobile.codingchallenge">

    <application
        android:name=".CartrackApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cartrack_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cartrack">
        <activity
            android:name=".login.ui.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.ui.ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cartrack.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.ui.ItemDetailActivity"
            android:parentActivityName=".user.ui.ItemListActivity"
            android:theme="@style/Theme.Cartrack.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cartrack.mobile.codingchallenge.user.ui.ItemListActivity" />
        </activity>
    </application>

</manifest>